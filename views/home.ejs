<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/css/bootstrap') %>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
  </head>
  <body>
    <%- include('./partials/Components/nav') %>
    <div class="container">
      <div class="row mt-5">
        <% blogs.forEach(blog => { %>
        <div class="card mx-3 col-md-3 col-lg-3" style="width: 18rem">
          <img
            src="/uploads/<%= blog.coverImage %>"
            class="card-img-top"
            alt="..."
          />
          <div class="card-body">
            <h5 class="card-title"><%= blog.title%> </h5>
            <p>Views:(<%= blog.views %>)</p>
            <a href="/blog/view/<%= blog._id%>" class="btn btn-primary">View</a>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/js/bootstrap') %>
  </body>
</html>
